<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mm.pndaza.mahabuddhavan"
    android:installLocation="preferExternal">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.FullScreen">
        <activity android:name="mm.pndaza.mahabuddhavan.activity.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="mm.pndaza.mahabuddhavan.activity.MainActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name="mm.pndaza.mahabuddhavan.activity.ReaderActivity"
            android:theme="@style/AppTheme">
        </activity>
    </application>

</manifest>